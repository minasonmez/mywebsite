---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Resume from '~/components/widgets/Resume.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Mina Sonmez Portfolio',
  description: 'Explore the portfolio of Mina Sonmez, a talented graphic designer specializing in branding and visual storytelling.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#' },
        { text: 'About', href: '#about' },
        { text: 'Skils', href: '#skills' },
        { text: 'Projects', href: '#projects' },
        { text: 'Resume', href: '#resume' },
        //{ text: 'Blog', href: '#blog' },
        //{ text: 'Github', href: 'https://github.com/minasonmez' },
      ]}

      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <!--Hero
    id="hero"
    title="Mina Sonmez"
    tagline="Personal Web Demo"
    actions={[{ variant: 'primary', text: 'Hire me', href: getPermalink('/contact#form') }]}
  >
  <Fragment slot="subtitle">
    I'm a Cognitive Science and Data Science student at UC Berkeley passionate about behavioral AI, UX research, and product innovation. <br />
    With experience across research labs, startups, and academic projects, I turn data and insights into meaningful digital experiences.
  </Fragment>
  
  </Hero>

  <!-- Content Widget **************** -->

  <Content
  id="about"
  columns={3}
  items={[
    {
      icon: 'tabler:brand-linkedin',
      callToAction: {
        target: '_blank',
        text: 'LinkedIn',
        href: 'https://www.linkedin.com/in/minasonmez', // ✅ Replace with her real profile if needed
      },
    },
  ]}
  image={{
    src: 'https://media.licdn.com/dms/image/v2/D4D03AQEJS2ssbitJPg/profile-displayphoto-shrink_800_800/B4DZTfT25jHAAc-/0/1738913313023?e=1750291200&v=beta&t=6Q27PZoNAmyqlKya6DY7iZUlTwW5S-c-2Gxi2MciL0U',
    alt: 'Mina Sonmez portrait',
    loading: 'eager',
  }}
>
  <Fragment slot="content">
    <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h2>
    <p>
      I'm Mina Sonmez, a Cognitive Science and Data Science student at UC Berkeley passionate about understanding how people think, feel, and interact with technology.
      My work focuses on behavioral AI, UX research, and building data-informed digital experiences.
    </p>
    <br />
    <p>
      Whether it's exploring cognitive models, analyzing user behavior, or designing user-friendly interfaces, I enjoy turning insights into impactful, human-centered solutions.
      I thrive at the intersection of science, design, and innovation.
    </p>
    <br />
    <p>
      You can find me on LinkedIn to connect or follow my latest work:
    </p>
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
  </Fragment>
</Content>

  

  <!-- Features3 Widget ************** -->

  <Features3
  id="skills"
  title="Skills & Tools"
  subtitle="Combining behavioral science and data to generate actionable product insights."
  columns={3}
  defaultIcon="tabler:point-filled"
  items={[
    {
      title: 'Behavioral Analytics (Amplitude)',
      description: 'Experienced in using Amplitude to analyze user journeys, cohorts, and product engagement trends.',
    },
    {
      title: 'Data Visualization (Tableau)',
      description: 'Skilled in turning complex datasets into clear, actionable dashboards for product and stakeholder decisions.',
    },
    {
      title: 'Survey Research (Qualtrics)',
      description: 'Designs and analyzes structured surveys to capture user sentiment, motivation, and behavior.',
    },
    {
      title: 'User Experience Tracking (Smartlook)',
      description: 'Interprets session replays and heatmaps to surface usability issues and user frustration points.',
    },
    {
      title: 'Lightweight Data Workflows (Airtable)',
      description: 'Uses Airtable for tagging research insights, organizing projects, and cross-functional collaboration.',
    },
    {
      title: 'Data Analysis (Python, SQL)',
      description: 'Applies Python and SQL to clean, analyze, and synthesize data, bridging quantitative depth with behavioral understanding.',
    },
  ]}
/>



  <!-- Testimonials Widget *********** -->

  <Testimonials
  id="projects"
  title="Selected Projects"
  subtitle="A few of my projects in behavioral data, research, and analytics"
  testimonials={[
    {
      testimonial: `A mobile/web application designed to support immigrant high school students in integrating into American education by offering tailored resources and mentor matching. Based on user input, the app curates educational resources, language support, and cultural integration materials.`,
      name: 'High School Integration App for Immigrants',
      job: '',
    },
    {
      testimonial: `Analyzed global population and economic trends using Python and statistical methods to assess poverty and population growth factors. Processed and visualized large datasets to identify key social and economic patterns.`,
      name: 'World Population and Poverty Analysis',
      job: '',
    },
    {
      testimonial: `Analyzed a multi-decade climate dataset (210 US cities) to investigate temperature and precipitation trends. Implemented bootstrap confidence intervals and A/B hypothesis testing in Python to compare historical vs. modern climate data.`,
      name: 'Climate Change — Temperatures & Precipitation',
      job: '',
    },
  ]}
/>


<Resume />


</Layout>
